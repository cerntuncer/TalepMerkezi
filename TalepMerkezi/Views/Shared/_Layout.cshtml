<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TalepMerkezi</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TalepMerkezi.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand bg-white border-bottom sticky-top">
        <div class="container-lg">
            <a class="navbar-brand fw-semibold" asp-controller="Talepler" asp-action="Index">TalepMerkezi</a>
            <div class="ms-auto d-flex gap-2">
                <a class="btn btn-outline-secondary" asp-controller="Talepler" asp-action="Index">Talepler</a>
                <a class="btn btn-primary" asp-controller="Talepler" asp-action="Create">
                    <span class="fw-semibold">Yeni Talep</span>
                </a>
            </div>
        </div>
    </nav>

    <div class="container-lg my-4">
        <main role="main">@RenderBody()</main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
